<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Warna shadow dengan transparansi -->
            <corners android:radius="24dp" /> <!-- Radius sudut shadow -->
        </shape>
    </item>

    <!-- Layer Background -->
    <item android:top="2dp" android:left="2dp"> <!-- Offset untuk shadow -->
        <shape android:shape="rectangle">
            <solid android:color="#08959A" /> <!-- Warna background -->
            <corners android:radius="24dp" /> <!-- Radius sudut background -->
        </shape>
    </item>
</layer-list>
