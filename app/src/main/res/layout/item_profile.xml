<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewProfileItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ikon Kiri -->
        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_placeholder"
            />

        <!-- Teks Judul -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewIcon"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppinsregular"
            android:text="Title"
            android:textColor="@color/font_colour"
            android:textSize="16sp" />

        <!-- Ikon Tindakan -->
        <ImageView
            android:id="@+id/imageViewAction"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_actionprofile"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
