<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/img_back"
        />

    <ImageView
        android:layout_width="153dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_jeli"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:id="@+id/img_jl1"
        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_below="@id/img_jl1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:text="Sign Up"
        android:textSize="32sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/primary_colour"
        android:id="@+id/tx_rg1"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/tx_rg1"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_colour"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:textColorHint="@color/primary_colour"
        android:textColor="@color/primary_colour"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/etx_email"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/etx_email"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_colour"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:textColorHint="@color/primary_colour"
        android:textColor="@color/primary_colour"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/etx_username"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/etx_username"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_colour"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textColorHint="@color/primary_colour"
        android:textColor="@color/primary_colour"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/etx_password"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etx_password"
        android:background="@drawable/button_shape_sc"
        android:text="Register"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/btn_register"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="12dp"
        android:layout_marginStart="95dp"
        android:text="Sudah punya akun?"
        android:textColor="@color/primary_colour"
        android:textSize="12dp"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/tx_rg2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="12dp"
        android:layout_marginStart="220dp"
        android:text="Login"
        android:textColor="@color/secondary_colour"
        android:textSize="12sp"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/tx_login"
        />
</RelativeLayout>
