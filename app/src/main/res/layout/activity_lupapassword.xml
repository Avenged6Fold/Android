<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LupapasswordActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/img_back"
        />

    <ImageView
        android:layout_width="153dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_jeli"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:id="@+id/img_jl1"
        />

    <TextView
        android:id="@+id/tx_lp1"
        android:layout_width="223dp"
        android:layout_height="39dp"
        android:layout_below="@id/img_jl1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Lupa Password"
        android:textColor="@color/primary_colour"
        android:textSize="26dp" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/tx_lp1"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_colour"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:textColorHint="@color/primary_colour"
        android:textColor="@color/primary_colour"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/etx_email"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/etx_email"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_colour"
        android:hint="Password Baru"
        android:textSize="16dp"
        android:textColorHint="@color/primary_colour"
        android:textColor="@color/primary_colour"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/etx_newpassword"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/etx_newpassword"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary_colour"
        android:hint="Ulangi Password"
        android:textSize="16dp"
        android:textColorHint="@color/primary_colour"
        android:textColor="@color/primary_colour"
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/etx_repassword"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_below="@id/etx_repassword"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape_sc"
        android:text="create new password"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsregular"
        />

</RelativeLayout>